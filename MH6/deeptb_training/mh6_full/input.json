{
    "common_options": {
        "basis": {
            "Ca": ["4s"],
            "H": ["1s"]
        },
        "device": "cpu",
        "dtype": "float32",
        "overlap": false,
        "seed": 199511
    },
    "model_options": {
        "nnsk": {
            "onsite": {
                "method": "uniform"
            },
            "hopping": {
                "method": "powerlaw",
                "rs": {
                    "Ca-H": 2.5,
                    "H-H": 1.3,
                    "Ca-Ca": 3.5
                },
                "w": 0.3
            },
            "freeze": false,
            "push":false
        }
    },
    "train_options": {
        "num_epoch": 500,
        "batch_size": 1,
        "optimizer": {
            "lr": 0.01,
            "type": "Adam"
        },
        "lr_scheduler": {
            "type": "exp",
            "gamma": 0.999
        },
        "loss_options": {
            "train": {
                "method": "eigvals",
                "diff_on": false,
                "eout_weight": 0.001,
                "diff_weight": 0.01
            },
            "validation": {
                "method": "eigvals",
                "diff_on": false,
                "eout_weight": 0.001,
                "diff_weight": 0.01
            }
        },
        "save_freq": 50,
        "validation_freq": 50,
        "display_freq": 10
    },
    "data_options": {
        "train": {
            "root": "./data",
            "prefix": "set",
            "get_eigenvalues": true,
            "get_Hamiltonian": false,
            "get_overlap": false
        },
        "validation": {
            "root": "./data",
            "prefix": "set",
            "get_eigenvalues": true,
            "get_Hamiltonian": false,
            "get_overlap": false,
            "type": "DefaultDataset"
        }
    }
}
