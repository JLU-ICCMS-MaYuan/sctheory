{
    "common_options": {
        "basis": {
            "Ca": ["s"],
            "H": ["s"]
        },
        "device": "cpu",
        "dtype": "float32",
        "overlap": false,
        "seed": 42
    },
    "model_options": {
        "nnsk": {
            "onsite": {
                "method": "uniform",
                "rs": 1.0,
                "w": 0.3
            },
            "hopping": {
                "method": "powerlaw",
                "rs": {
                    "Ca-H": 2.5,
                    "H-H": 1.3,
                    "Ca-Ca": 3.5
                },
                "w": 0.2
            },
            "freeze": false,
            "std": 0.01
        }
    },
    "train_options": {
        "num_epoch": 500,
        "batch_size": 1,
        "optimizer": {
            "lr": 0.01,
            "type": "Adam",
            "betas": [0.9, 0.999],
            "eps": 1e-8,
            "weight_decay": 0,
            "amsgrad": false
        },
        "lr_scheduler": {
            "type": "rop",
            "factor": 0.8,
            "patience": 50,
            "min_lr": 1e-6,
            "threshold": 0.0001,
            "threshold_mode": "rel",
            "cooldown": 0,
            "eps": 1e-8
        },
        "loss_options": {
            "train": {
                "method": "eigvals",
                "diff_on": false
            }
        },
        "save_freq": 50,
        "validation_freq": 50,
        "display_freq": 10
    },
    "data_options": {
        "use_reference": false,
        "train": {
            "root": "./data",
            "prefix": "set",
            "batch_size": 1,
            "get_eigenvalues": true,
            "get_Hamiltonian": false,
            "get_overlap": false
        }
    }
}
