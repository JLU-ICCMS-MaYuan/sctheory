 RowBox[{
  RowBox[{"aq", " ", "\[Diamond]", " ", "aqi"}], "//", 
  "FullSimplify"}]], "Input",
 CellChangeTimes->{{3.7123848967662354`*^9, 3.71238492365058*^9}},
 CellLabel->"In[82]:=",ExpressionUUID->"26284674-793e-4d4f-a5ae-82922380b866"],

Cell["\<\
On the other hand the inverse is given by the conjugate quaternion and the \
absolute value.\
\>", "Text",
 CellChangeTimes->{{3.712384938785061*^9, 3.7123849696609497`*^9}, {
  3.712385030346249*^9, 
  3.712385062643731*^9}},ExpressionUUID->"e3515633-72e4-4234-8229-\
b46de07305c2"],

Cell[BoxData[
 RowBox[{
  RowBox[{"aqi", "==", 
   RowBox[{
    RowBox[{"GTQConjugate", "[", "aq", "]"}], "/", 
    RowBox[{
     RowBox[{"GTQAbs", "[", "aq", "]"}], "^", "2"}]}]}], " ", "//", 
  "FullSimplify", " "}]], "Input",
 CellChangeTimes->{{3.712385065892056*^9, 3.712385150113768*^9}, {
  3.7123854894192343`*^9, 3.7123854976429043`*^9}},
