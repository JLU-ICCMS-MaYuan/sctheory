  3.7123843771150723`*^9}},ExpressionUUID->"979d3e67-d44b-41eb-9e79-\
78420ded5b36"],

Cell[BoxData[
 RowBox[{"unit", "=", 
  RowBox[{"{", 
   RowBox[{"1", ",", 
    RowBox[{"{", 
     RowBox[{"0", ",", "0", ",", "0"}], "}"}]}], "}"}]}]], "Input",
 CellChangeTimes->{{3.712384368600442*^9, 3.712384387791566*^9}},
 CellLabel->"In[77]:=",ExpressionUUID->"966a9666-9466-44b1-b95b-8a68f86e2dea"],

